<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home Page</title>
</head>
<body>
    <%- include('./partials/navbar') %> 
<div class="container mt-3">
<div class="row row-cols-3">
    <% blogs.forEach(blog => { %>
        <div class="col mt-3">      
        <div class="card col" style="width: 18rem;">
            <img src="<%= blog.coverImage %>" class="card-img-top" alt="Card Image" height="160px">
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary">Open Blog</a>
            </div>
          </div>
        </div>  
    <% }) %>
</div>
</div>
    <%- include('./partials/body') %>
</body>
</html>