<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home Page</title>
</head>
<body>
    <%- include('./partials/navbar') %> 
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImage %>" alt="Cover Image" width="700px">
        <pre><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImage %>" alt="Profile Image" width="100px"> <%= blog.createdBy.fullName %>
    </div>
        
    <div class="container">
        <h3>Comments</h3>
        
       <% if (locals.user) { %>
        <form method="post" action="/blog/comment/<%= blog._id %>">
            <div >
                <textarea class="form-control mt-4" name="content" placeholder="Leave a comment here" id="content" style="height: 100px"></textarea>
            </div>
            <div class="container mt-3 mb-3">
                <button type="submit" class="btn btn-primary">Add Comment</button>
            </div>    
        </form>
       <% } %>

       <% if (locals.comments) { %>
       <div class="mt-3">
            <% comments.forEach(comment => { %>
                <img src="<%= comment.createdBy.profileImage %>" width="50px"><%= comment.createdBy.fullName %>
                <p>
                    <%= comment.content %>
                </p>
            <% }) %>
       </div>
       <% } %>
    </div>


    <%- include('./partials/body') %>
</body>
</html>